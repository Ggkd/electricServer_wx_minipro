/* pages/yue/yue.wxss */
.aside{
	width:4rem;
	border-right: 1px solid #ddd;
	font-size: .85rem;
}
.type-nav{
	position: relative;
	padding:.7rem .3rem;
	text-align: center;
	border-bottom: 1px solid #ddd;
	z-index: 10;
}
.type-nav.selected{
	margin-right: -1px;
	padding-left:-1px;
	color: #333;
	background-color: #fff;
}
.content{
	background-color: #fff;
}

.dish{
	margin-left: 1rem;
	padding: 1rem;
	border-bottom: 1px solid #ddd;
}
.dish .title{
	display: block;
	font-size: 1rem;
}
.dish p{
	color: rgb(7,103,200);
	font-size: .75rem;
}
.dish .add-btn{
	width: 3rem;
	text-align: right;
}
.font2{
  display:block;
  width: 100px;
  font-size:12px;
  color:gray;
  margin-left:-60px;
}